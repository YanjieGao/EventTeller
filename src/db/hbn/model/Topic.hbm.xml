<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="db.hbn.model">
	<class
		name="Topic"
		table="topic" dynamic-update="true"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="integer"
			column="id"
		>
		</id>
		<property
			name="title"
			column="title"
			type="string"
			not-null="false"
			length="200"
		/>
		<property
			name="keyWords"
			column="keywords"
			type="string"
			not-null="false"
			length="300"
		/>
		<property
			name="summary"
			column="summary"
			type="string"
			not-null="false"
		/>
		<property
			name="endTime"
			column="endtime"
			type="java.util.Date"
			not-null="false"
		/>
		<property
			name="startTime"
			column="starttime"
			type="java.util.Date"
			not-null="false"
		/>
		<property
			name="articles"
			column="articles"
			type="string"
			not-null="false"
		/>
		<property
			name="imgs"
			column="imgs"
			type="string"
			not-null="false"
		/>
		<property
			name="relations"
			column="relations"
			type="string"
			not-null="false"
		/>
		<property
			name="subtopic"
			column="subtopic"
			type="integer"
			not-null="false"
			length="32"
		/>
		<property
			name="number"
			column="number"
			type="integer"
			not-null="false"
			length="32"
		/>
	</class>	
</hibernate-mapping>